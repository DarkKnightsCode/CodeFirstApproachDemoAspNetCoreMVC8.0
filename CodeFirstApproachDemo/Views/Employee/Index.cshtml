@model IEnumerable<CodeFirstApproachDemo.Models.ViewModel.EmployeeDepartmentViewModel>
@{
    ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@{
    if (TempData["CreateResponse"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["CreateResponse"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    if (TempData["UpdateResponse"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["UpdateResponse"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    if (TempData["DeleteResponse"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["DeleteResponse"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<table class="table table-hover table-responsive overflow-scroll table-light">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Department Name</th>
            <th>Department Code</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeId</td>
                <td>@item.First_Name</td>
                <td>@item.Last_Name</td>
                <td>@item.Gender</td>
                <td>@item.Department_Name</td>
                <td>@item.Department_Code</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EmployeeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
